// Columns
		
.col
	margin 0.5%
	
	float left
	
	box-sizing border-box
	
	&.right-padding
		padding-right 10px

	&.center
		float none
		
		margin-left auto !important
		margin-right auto !important

		p
			text-align center

	&.no-margin
		margin 0

		&.col-1
			width 8.33% !important
		
		&.col-2
			width 16.66% !important
			
		&.col-3
			width 25% !important
			
		&.col-4
			width 33.33% !important
			
		&.col-5
			width 41.66% !important
			
		&.col-6
			width 50% !important
			
		&.col-7
			width 58.33% !important
			
		&.col-8
			width 66.66% !important
			
		&.col-9
			width 77% !important
			
		&.col-10
			width 83.33% !important
			
		&.col-11
			width 91.66% !important
			
		&.col-12
			width 100% !important
	
	&.no-margin-y
		margin-top 0
		margin-bottom 0
	
	&.full
		width 100%
		margin-left 0
		margin-right 0
	
	&.col-1
		width 7.33%
		
	&.col-2
		width 15.66%
		
	&.col-3
		width 24%
		
	&.col-4
		width 32.33%
		
	&.col-5
		width 40.66%
		
	&.col-6
		width 49%
		
	&.col-7
		width 57.33%
		
	&.col-8
		width 65.66%
		
	&.col-9
		width 74%
		
	&.col-10
		width 82.33%
		
	&.col-11
		width 90.66%
		
	&.col-12
		width 99%

